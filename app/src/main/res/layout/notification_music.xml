<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="#22000000"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_notification_cover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/default_cover"
        android:layout_marginRight="15dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲名称"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_notification_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="歌手名称"
            android:textSize="14sp"
            android:textColor="#AAAAAA"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_notification_previous"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="5dp"
            android:src="@drawable/ic_notification_previous" />

        <ImageView
            android:id="@+id/iv_notification_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_notification_play" />

        <ImageView
            android:id="@+id/iv_notification_next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="5dp"
            android:src="@drawable/ic_notification_next" />

        <ImageView
            android:id="@+id/iv_notification_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="5dp"
            android:src="@drawable/ic_notification_close" />
    </LinearLayout>
</LinearLayout>